<% provide(:title, "users") %>
<%= render "shared/login_header" %>
<div class="show_user_form">
  <h1><i class="fas fa-caret-right"></i>マイページ</h1>
  <%= form_with model: @user, url: user_path, local: true do |f| %>
    <div class="show_field">
      <%= f.label :名前 %>
      <%= current_user.name %><br>
    </div>

    <div class="show_field">
      <%= f.label :メールアドレス %>
      <%= current_user.email %><br>
    </div>

    <div class="show_field">
      <%= f.label :パスワード%>
      ●●●●●●<br>
    </div>

    <div class="show_field">
      <%= f.label :パスワード再入力 %>
      ●●●●●●<br>
    </div>
  <% end %>
  <div class="edit_link">
    <%= link_to "ユーザー編集", edit_user_path(current_user) %>
    <%= link_to "いいね一覧", likes_user_path %>
  </div>
</div>
